# Your Discord bot token from https://discord.com/developers
BOT_TOKEN=

# Spotify API credentials (optional, but recommended for Spotify playlist support)
# Get these from https://developer.spotify.com/dashboard/
SPOTIFY_ID=
SPOTIFY_SECRET=

# Bot command prefix (set to empty string to disable text commands)
BOT_PREFIX=d!

# Enable Discord slash commands (True/False)
ENABLE_SLASH_COMMANDS=False

# Allow mentioning the bot as a command prefix (True/False)
MENTION_AS_PREFIX=True

# Voice channel timeout in seconds (how long the bot stays in an empty voice channel)
VC_TIMEOUT=600

# Default setting for voice channel timeout (True = timeout enabled, False = no timeout)
VC_TIMEOUT_DEFAULT=True

# Allow server admins to edit the voice channel timeout setting (True/False)
ALLOW_VC_TIMEOUT_EDIT=True

# Maximum number of songs to preload (maximum 25 due to Discord embed limitations)
MAX_SONG_PRELOAD=15

# Number of results to display in search commands
SEARCH_RESULTS=5

# Maximum number of songs to remember in history
MAX_HISTORY_LENGTH=10

# Maximum number of track names to remember in history
MAX_TRACKNAME_HISTORY_LENGTH=15

# Database URL in SQLAlchemy format (sqlite, postgres, or mysql)
# Must be async-compatible
DATABASE_URL=sqlite:///settings.db

# Enable the button plugin for controlling playback via message buttons (True/False)
ENABLE_BUTTON_PLUGIN=True

# Embed color in hexadecimal format (0x followed by 6 hex digits)
EMBED_COLOR=0x4DD4D0

# Supported file extensions for direct file playback
SUPPORTED_EXTENSIONS="('.webm', '.mp4', '.mp3', '.avi', '.wav', '.m4v', '.ogg', '.mov')"

# Path to cookies.txt file for authenticated requests
COOKIE_PATH=config/cookies/cookies.txt

# Globally disable auto-joining voice channels (True/False)
GLOBAL_DISABLE_AUTOJOIN_VC=False

# Announce when the bot is disconnecting (True/False)
ANNOUNCE_DISCONNECT=True

# Enable playlist functionality (True/False)
ENABLE_PLAYLISTS=True

# List of guild IDs that the bot is allowed to join (empty list = all guilds allowed)
# Format: [123456789012345678, 987654321098765432]
GUILD_WHITELIST=[]